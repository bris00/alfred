{
  "name": "alfred",
  "private": "true",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "prepublishOnly": "npm run bundle",
    "prebundle": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "tsup src --format cjs --sourcemap inline",
    "bundle": "tsup src --format cjs --minify",
    "start": "nodemon --watch 'src/**/*' --ext 'ts,json' --exec \"npm run build && node dist/alfred.js\"",
    "test": "concurrently npm:test:*",
    "test:types": "tsc --noEmit",
    "test:unit": "jest --config config/jest.config.js",
    "test:lint": "eslint . --max-warnings=0",
    "lint:fix": "npm run test:lint -- --fix"
  },
  "author": "Bris",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^13.8.1",
    "fuzzysort": "^2.0.1",
    "nodemon": "^2.0.18",
    "sequelize": "^6.21.1",
    "sqlite3": "^5.0.8",
    "sugar": "^2.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "@typescript-eslint/parser": "5.30.0",
    "commitizen": "^4.2.4",
    "concurrently": "^7.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.1.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsup": "^6.1.2",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "./config/eslint.config.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
