{
  "name": "alfred",
  "private": "true",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "prepublishOnly": "npm run bundle",
    "prebundle": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "tsup src --format cjs --sourcemap inline",
    "bundle": "tsup src --format cjs --minify",
    "start": "nodemon --watch 'src/**/*' --ext 'ts,json' --exec \"npm run build && node dist/alfred.js\"",
    "test": "concurrently npm:test:*",
    "test:types": "tsc --noEmit",
    "test:unit": "jest --config config/jest.config.js",
    "test:lint": "eslint . --max-warnings=0",
    "lint:fix": "npm run test:lint -- --fix"
  },
  "author": "Bris",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^12.5.1",
    "fuzzysort": "^1.1.4",
    "nodemon": "^2.0.18",
    "sequelize": "^6.5.0",
    "sqlite3": "^5.0.1",
    "sugar": "^2.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.27",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "commitizen": "4.2.2",
    "concurrently": "^5.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^8.2.0",
    "esbuild-jest": "^0.3.0-beta.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tsup": "^3.7.1",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": "./config/eslint.config.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
