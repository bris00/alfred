{
    "compilerOptions": {
        "strict": true,
        "downlevelIteration": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "types": [ "@types/node" ],
        "lib": [ "ES2020" ],
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
    },
    "include": [
        "src"
    ]
}